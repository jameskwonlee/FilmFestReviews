<% include ../partials/header %>
    
    <div class= "container-fluid">
        
        <div class="jumbotron">
            <div class="container">
            <h1>Campgrounds</h1>
        
            <p>View Camps from All Over the World</p>
            <p><a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new campground</a></p>
            </div>
            
            
        </div>
        
        
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach((camp) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="img-thumbnail" src=<%=camp.image %>>  <h4><%=camp.name %></h4>
                    <p>
                        <a href="/campgrounds/<%=camp._id %>" class= "btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
            
        </div>
    </div>

<% include ../partials/footer %>
